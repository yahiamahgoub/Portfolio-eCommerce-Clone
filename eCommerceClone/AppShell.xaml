<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="eCommerceClone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:eCommerceClone"
    xmlns:views="clr-namespace:eCommerceClone.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        
        <Tab Title="Listings Page" Icon="icon_listings.png">
            <ShellContent Icon="icon_listings.png" Title="ListingsPage" ContentTemplate="{DataTemplate views:ListingsPage}" Route="MainPage" />
        </Tab>

        <Tab Title="Add Item" Icon="icon_add.png">
            <ShellContent Icon="icon_add.png"
        Title="New Page"
        ContentTemplate="{DataTemplate views:NewItemPage}"
        Route="MainPage" />
        </Tab>
        
        <!--<Tab Title="Home">
            <ShellContent
        Title="MainPage(Home)"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        </Tab>-->
    </FlyoutItem>
   

    <MenuItem Text="Choose Language" IconImageSource="icon_language.png"/>
    <MenuItem Text="Rate App" IconImageSource="icon_rate.png"/>
    <MenuItem Text="About App" IconImageSource="icon_about.png"/>
    <!--<MenuItem Text="Help" IconImageSource="" Command="" CommandParameter=""/>-->

</Shell>

                <CollectionView FlowDirection="LeftToRight" ItemsSource="{Binding ImageList, Converter={x:StaticResource imageByteListToImageListConverter}, Mode=OneWay}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout>
                                <Image Source="{Binding}"/>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>-->
        </HorizontalStackLayout>

        <!--<ListView BackgroundColor="Red" Grid.Row="7" ItemsSource="{Binding ImageList, Converter={x:StaticResource imageByteListToImageListConverter}}">-->
        <!--<ListView BackgroundColor="Red" Grid.Row="7" ItemsSource="{Binding ImageList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Button Text="Delete" Command="{Binding RemoveImageCommand}"></Button>
                        <Image Source="{Binding Converter={x:StaticResource byteArrayToImageSourceConverter}}" HeightRequest="150" WidthRequest="150"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->

        <!--<Border Stroke="red" Grid.Row="7"
        StrokeThickness="1"
        Padding="16,8"
        HorizontalOptions="Center">
            <Entry Text=".NET MAUI"           
           FontSize="18"
           FontAttributes="Bold" />
        </Border>-->

        <Button Text="Add" VerticalOptions="CenterAndExpand" Grid.Row="8" Command="{Binding SaveItemCommand}"/>


<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ext="clr-namespace:eCommerceClone.CusomExtensions"
             x:Class="eCommerceClone.Views.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <!--<MenuItem Text="{ext:Translate ChooseLanguage}" IconImageSource="icon_language.png"/>-->
        <Label             
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="Large">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{ext:Translate AppTitle}"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Label Text="{ext:Translate AppVersion}"/>
        <Button Text="{ext:Translate LicenceAgreement}"/>
        <Button Text="{ext:Translate OpenSourceLicenses}"/>

    </VerticalStackLayout>
</ContentPage>